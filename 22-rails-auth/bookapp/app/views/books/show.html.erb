<% if flash[:success] %>
    <h4 style="color: red;">
      <%= flash[:success] %>
    </h4>
<% end %>

<div class='header'>
  <h1> <%= @book.title %> </h1>
</div>

<h4>
  Author: <%= link_to @book.author.name, author_path(@book.author), :method => :get %>
</h4>

<% if current_author && @book.author_id == current_author.id %>
  <%= button_to "Delete", book_path(@book), :method => :delete %>
  <%= link_to "Edit", edit_book_path(@book), :method => :get %>
<% end %>

<%= link_to "Back to Books", books_path %>
